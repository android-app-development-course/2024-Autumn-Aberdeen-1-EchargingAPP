<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.zzh_PersonalFragment">

        <TextView
            android:id="@+id/username"
            android:background="@drawable/e1"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/password"
            android:background="@drawable/e1"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="24dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/chepaohao"
                    android:textSize="28sp"
                    android:text="asdasasdasd"
                    android:background="@drawable/e1"
                    android:backgroundTint="?colorPrimary"
                    android:textColor="#ffffff"
                    android:padding="12dp"
                    android:layout_margin="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="12dp"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginVertical="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/stop"
                        android:text="停止充电"
                        android:background="@drawable/e1"
                        android:padding="10dp"
                        android:backgroundTint="@color/md_theme_error_highContrast"
                        android:textColor="#ffffff"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="12dp"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:id="@+id/editProgress"
                        android:hint="输入充电进度"
                        android:padding="10dp"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/e1"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>